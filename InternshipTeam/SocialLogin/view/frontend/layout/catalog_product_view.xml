<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="InternshipTeam_SocialLogin::css/style.css" />
    </head>
    <body>
        <referenceBlock name="product.info.details" >
            <block class="InternshipTeam\SocialLogin\Block\Comment" name="comments.tab" as="comments"
                   template="comment.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Comments</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="product.info.main">
            <block class="InternshipTeam\SocialLogin\Block\Share" name="internshipTeam_sociallogin_share" template="share.phtml"/>
        </referenceContainer>
    </body>
</page>